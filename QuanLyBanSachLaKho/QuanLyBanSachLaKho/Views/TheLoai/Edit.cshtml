@model QuanLyBanSachLaKho.Models.TheLoai

@{
    ViewBag.Title = "Chỉnh Sửa Thể Loại " + @Html.DisplayFor(model => model.TenTheLoai);
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<link href="~/css/kesach.css" type="text/css" rel="stylesheet" asp-append-version="true" />

<br />
<h2 style="text-align: center;"><b>CHỈNH SỬA THÔNG TIN THỂ LOẠI</b></h2>

<div class="log">
    <div class="formdangnhap container">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <p>Đây là mục chỉnh sửa dữ liệu:</p>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.MaTheLoai)
            <hr />

            <div class="form-group">
                <label for="tentl"><b>Tên Thể Loại:</b></label><br />
                @Html.EditorFor(model => model.TenTheLoai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenTheLoai, "", new { @class = "text-danger" })
            </div>

            <div class="clearfixes">
                <input type="submit" class="btn btn-info" value="LƯU THÔNG TIN THỂ LOẠI" />
            </div>
        }

        <div class="clearfix">
            <p>@Html.ActionLink("Quay về danh sách", "Index")</p>
        </div>
    </div>
</div>