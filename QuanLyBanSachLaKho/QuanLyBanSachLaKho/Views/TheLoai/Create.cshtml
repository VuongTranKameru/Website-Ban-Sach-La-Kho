@model QuanLyBanSachLaKho.Models.TheLoai

@{
    ViewBag.Title = "Thêm Thể Loại Mới";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<link href="~/css/kesach.css" type="text/css" rel="stylesheet" asp-append-version="true" />

<br />
<h2 style="text-align: center;"><b>THÊM THỂ LOẠI MỚI</b></h2>

<div class="log">
    <div class="formdangnhap container">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <p>Vui lòng nhập dữ liệu vào đây:</p>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <hr />

            <div class="form-group">
                <label for="matl"><b>Mã Thể Loại:</b></label><br />
                @Html.EditorFor(model => model.MaTheLoai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MaTheLoai, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label for="tentl"><b>Tên Thể Loại:</b></label><br />
                @Html.EditorFor(model => model.TenTheLoai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenTheLoai, "", new { @class = "text-danger" })
            </div>

            <div class="clearfix">
                <button type="submit" class="signupbtn">THÊM MỚI THỂ LOẠI</button>
            </div>
        }

        <div class="clearfix">
            <p>@Html.ActionLink("Quay về danh sách", "Index")</p>
        </div>
    </div>
</div>