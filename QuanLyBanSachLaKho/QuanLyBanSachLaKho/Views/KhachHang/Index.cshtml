@model IEnumerable<QuanLyBanSachLaKho.Models.KhachHang>

@{
    ViewBag.Title = "Danh Sách Tài Khoản Khách Hàng";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>QUẢN LÝ TÀI KHOẢN KHÁCH HÀNG</h2>

<div class="table-responsive">
    <table class="table">
        <tr class="bg-warning">
            <th>
                Mã KH
            </th>
            <th>
                Họ Và Tên Đệm
            </th>
            <th>
                Tên KH
            </th>
            <th>
                Địa Chỉ KH
            </th>
            <th>
                Sđt KH
            </th>
            <th class="col-2">
                Email
            </th>
            <th>
                Ngày Sinh
            </th>
            <th>
                Giới Tính
            </th>
            <th>
                Tài Khoản
            </th>
            <th>
                Mật Khẩu
            </th>
            <th class="col-1"></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr class="table-warning">
                <td>
                    @Html.DisplayFor(modelItem => item.MaKH)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoDemKH)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenKH)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiaChiKH)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SdtKH)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgaySinh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GioiTinh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TaiKhoan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MatKhau)
                </td>
                <td>
                    <a href='@Url.Action("Details", "KhachHang", new { id = item.MaKH })'>
                        <i class="icon icon-wrap nalika-info"></i>
                    </a><br />
                    <a href='@Url.Action("Delete", "KhachHang", new { id = item.MaKH })'>
                        <i class="icon icon-wrap nalika-delete-button"></i>
                    </a>
                </td>
            </tr>
        }

    </table>
</div>