@model QuanLyBanSachLaKho.Models.DonHang

@{
    ViewBag.Title = "Tạo Phiếu Mượn Sách";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@{int itemCount = 0; }

<link href="~/css/kesach.css" type="text/css" rel="stylesheet" asp-append-version="true" />

<br />
<h2 style="text-align: center;"><b>PHIẾU MƯỢN SÁCH</b></h2>

<div class="log">
    <div class="formdangnhap container">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <p>Vui lòng nhập dữ liệu vào đây:</p>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <hr />

            <div class="form-group">
                <label for="matl"><b>Họ Tên Độc Giả:</b></label><br />
                @Html.EditorFor(model => model.TenNguoiNhan, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenNguoiNhan, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label for="tentl"><b>Ngày Mượn:</b></label><br />
                @Html.EditorFor(model => model.NgayDH, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NgayDH, "", new { @class = "text-danger" })
            </div>

            <table class="table table-responsive">
                @foreach (var item in Model.CTDonHangs)
                {
                    if (itemCount == 0)
                    {
                        <tr class="bg-info">
                            <th>
                                STT
                            </th>
                            <th>
                                Mã Sách
                            </th>
                            <th>
                                Tên Sách
                            </th>
                            <th>
                                Thể Loại
                            </th>
                            <th>
                                Tác Giả
                            </th>
                        </tr>
                    }
                    itemCount += 1;
                    <tr class="table-info">
                        <td>
                            @itemCount
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MaSach)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sach.TenSach)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sach.TheLoai)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sach.TacGia)
                        </td>
                    </tr>
                }
            </table>

            <div class="clearfix">
                <button type="submit" class="signupbtn">THÊM MỚI THỂ LOẠI</button>
            </div>
        }

        <div class="clearfix">
            <p>@Html.ActionLink("Quay về danh sách", "Index")</p>
        </div>
    </div>
</div>